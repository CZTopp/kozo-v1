# Database (PostgreSQL connection string)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Session secret for authentication cookies
SESSION_SECRET=your-session-secret-here

# OpenAI API key (used for AI-powered crypto research: token allocations, fundraising rounds, supply schedules)
OPENAI_API_KEY=sk-your-openai-api-key

# FRED API key (used for macro economic indicators: interest rates, inflation, GDP)
# Get one free at https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your-fred-api-key

# Thirdweb Client ID (used for on-chain data: burn events, staking balances, holder concentration)
# Get one at https://thirdweb.com/dashboard
THIRDWEB_CLIENT_ID=your-thirdweb-client-id
